@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Tur detalı</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Ana səhifə</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">
            @Model.Description
        </h3>
        <div class="blog-post-align">
            <div class="blog-post-img">
                <a href="#"><img src="/Images/@Model.CoverImage" alt="" style="border-radius: 20%;" class="img-fluid" /></a>
            </div>
            <div class="blog-post-info">
                <div class="author align-items-center mb-1">
                    <a href="#">@Model.City / @Model.DayNight</a>
                </div>
@*                <ul class="blog-meta">
                    <li class="meta-item blog-lesson">
                        <span class="meta-value"> June 13, 2020 </span>
                    </li>
                    <li class="meta-item blog-students">
                        <span class="meta-value"> 6min read</span>
                    </li>
                </ul>*@
            </div>
        </div>
    </div>
</div>
<section class="blog-post-main w3l-homeblock1">
    <!--/blog-post-->
    <div class="blog-content-inf pb-5">
        <div class="container pb-lg-4">
            <div class="single-post-image">
                <div class="post-content">
                    <img style="width: 100%;" src="/Images/@Model.CoverImage" class="radius-image img-fluid mb-5" alt="@Model.City" />
                </div>
            </div>
            <div class="single-post-content">
                <p class="alphabet mb-4">
                    <span class="big-letter">T</span>
                    @Model.Details1
                </p>
                <blockquote class="blockquote my-5">
                    <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                    Səyahət etmək təkcə yeniləri görmək deyil, həm də geridə qoymaqdır. Təkcə qapıları açmaq deyil, həm də onları arxanızda bağlamaq, bir daha geri qayıtmamaqdır.
                    <footer class="blockquote-footer mt-3">
                        Yan Myrdal
                    </footer>
                </blockquote>
                <div class="sing-post-thumb mb-5 row pt-3">
                    <div class="col-sm-6">
                        <a href="#url"><img style="width:320px;height: 180px;"  src="/Images/@Model.Image" class="img-fluid radius-image" alt=""></a>
                    </div>
                    <div class="col-sm-6 mt-sm-0 mt-3">
                        <a href="#url"><img style="width:320px;height: 180px;" src="/Images/@Model.Image2" class="img-fluid radius-image" alt=""></a>
                    </div>
                </div>
                <h3 class="blog-desc-big m-0 mb-lg-4 mb-3">Ətraflı</h3>
                <p class="mb-4">
                    @Model.Details2
                </p>
                <div class="d-grid left-right mt-5 pb-md-5">
                    <div class="buttons-singles tags">
                        <h4>Teqlər :</h4>
                        <a href="#blog-tag">Səyahət</a>
                        <a href="#blog-tag">Mədəniyyət</a>
                        <a href="#blog-tag">Hotel</a>
                        <a href="#blog-tag">Yemək</a>
                    </div>
                    <div class="buttons-singles">
                        <h4>Paylaş :</h4>
                        <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-pinterest-p" aria-hidden="true"></span></a>
                    </div>
                </div>
                <div class="author-card mt-5">
                    <div class="row align-items-center">
                        <div class="col-sm-3 col-6">
                            <div>
                                <img src="/Images/@Model.Guide.Image" alt="@Model.Guide.FullName" onerror="this.src('/Images/user.png')" class="img-fluid">
                            </div>
                        </div>
                        <div class="col-sm-9 mt-sm-0 mt-3">
                            <h3 class="mb-3 title"><b>Tur üzrə bələdçi:</b> @Model.Guide.FullName</h3>
                            <p>
                                @Model.Guide.Description
                            </p>
                            <ul class="author-icons mt-4">
                                <li>
                                    <a class="facebook" href="@Model.Guide.InstagramUrl">
                                        <span class="fa fa-facebook"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a class="twitter" href="@Model.Guide.TwitterUrl">
                                        <span class="fa fa-twitter"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a class="google" href="@Model.Guide.InstagramUrl">
                                        <span class="fa fa-google-plus"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a class="linkedin" href="@Model.Guide.InstagramUrl">
                                        <span class="fa fa-linkedin"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a class="github" href="@Model.Guide.InstagramUrl">
                                        <span class="fa fa-github"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dribbble" href="@Model.Guide.TwitterUrl">
                                        <span class="fa fa-dribbble"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("Comments",new {id = Model.DestinationId})
                @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")
            </div>
        </div>
    </div>
</section>