@using EntityLayer.Concrete
@model List<Testimonial>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<section class="w3l-clients" id="clients">
    <div class="cusrtomer-layout py-5">
        <div class="container py-lg-4 py-md-3 pb-lg-0">
            <div class="heading text-center mx-auto">
                <h6 class="sub-title text-center">@localizer["Qonaqlarımız bizim üçün nə deyirlər"]</h6>
                <h3 class="hny-title mb-md-5 mb-4">@localizer["Düşüncələriniz bizim üçün dəyərlidir"]</h3>
            </div>
            <div class="testimonial-width">
                <div id="owl-demo1" class="owl-two owl-carousel owl-theme">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="testimonial-content">
                                <div class="testimonial">
                                    <blockquote>
                                        <span class="fa fa-quote-left" aria-hidden="true"></span>
                                        @item.Comment
                                    </blockquote>
                                    <div class="testi-des">
                                        <div class="test-img">
                                            <img src="~/Traversal-Liberty/assets/images/user.png" class="img-fluid" alt="@item.Client">
                                        </div>
                                        <div class="peopl align-self">
                                            <h3>@item.Client</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>